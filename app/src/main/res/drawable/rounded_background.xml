<?xml version="1.0" encoding="utf-8"?><!-- rounded_edittext_background.xml -->
<!-- rounded_edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#ffffff" /> <!-- Background color of the EditText -->
            <stroke
                android:width="1dp"
                android:color="#808080" />
        </shape>
    </item>

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#00FFFFFF" /> <!-- Transparent color -->
            <padding
                android:bottom="4dp"
            android:left="4dp"
            android:right="4dp"
            android:top="4dp" />
        </shape>
    </item>

</layer-list>
